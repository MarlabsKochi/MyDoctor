<div class="container">
  <div class="jumbotron">
    <h1><%= link_to @patient.name.capitalize %></h1>
    <% if @patient.avatar.present? %>
    	<%= image_tag @patient.avatar.url(:thumb) %>
    <% else %>
    	<%= image_tag("missing_patient_avatar.png",size: "100x100") %>
    <% end %>
  </div>
  <div>
  <% if patient_signed_in? %>
  	<%=render :partial => "appointments/appointments"%>
  <% end %>
  </div>
</div>
