<%= form_for(@patient,  html: { multipart: true }) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control required' %>
  </div>

  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div> 

  <div class="actions">
    <%= f.submit "Update", :class => 'button right' %>
  </div>

  <% end %>