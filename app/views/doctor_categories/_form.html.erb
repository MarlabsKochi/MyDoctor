<%= form_for(@doctor_category, :html => {multipart:true}) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control' %>
  </div>

   <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => 'button right' %>
  </div>

<% end %>
