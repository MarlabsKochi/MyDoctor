<% if user_signed_in? %>
	<p><%= link_to 'Users:', users_path %> <%= User.count %> registered</p>
<% elsif doctor_signed_in? %>
	<h3><%= "Welcome #{current_doctor.name}" %></h3>
<% end %>

<div class="container">
 <h2>Doctor Categories</h2>
 <% DoctorCategory.all.each do |doctor_category| %>
	  <ul class="list-group">
	    <li class="list-group-item"><span class="badge"><%= doctor_category.doctors.count %></span> 
	    <%= link_to doctor_category.name, doctor_category %></li>
	  </ul>
  <% end %>
</div>
